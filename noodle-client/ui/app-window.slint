import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";
import { NoodleText } from "noodle-text.slint";
import { SearchBar } from "search-bar.slint";
import { ButtonOutline } from "button-outline.slint";


export component AppWindow inherits Window {
    in-out property <int> counter: 42;
    in-out property <string> user_firstname: "not set";
    callback search_bar_edited(text: string);
    callback button_outline_clicked();
    width: 1280px;
    height: 720px;
    background: white;
    title: "Noodle";
    callback request-increase-value();
    icon: @image-url("assets/noodle-soup.png");
    VerticalBox {
        
        HorizontalBox {
            height: 100px;
            NoodleText {
                text: "HEADER";
                height: 100%;
                h-level: 1;
            }
            NoodleText {
                height: 100%;
                text: "Header element";
                h-level: 2;
            }
            SearchBar {
                width: 300px;
                height: 100%;
                edited(text) => {
                    root.search_bar_edited(text);
                }
            }
            ButtonOutline {
                width: 200px;
                height: 100%;
                outline-color: #e91e63; // z.B. Pink
                text: "Outline Button";
                clicked => {
                    // Dein Callback-Code
                    root.button_outline_clicked();
                }
            }

        }
        NoodleText {
            text: "Hallo " + user_firstname + "!";
            h-level: 3;
        }
    }
}