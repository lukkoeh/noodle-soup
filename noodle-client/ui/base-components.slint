//Tag-bubbles small bubbles that take text and color input
component TagBubble inherits Rectangle {
    property <string> text_content: "ON22";
    property <int> font_height;
    property <int> pad: 40;
    property <brush> bg_color: #f00;

    background: root.bg_color;
    border-radius: font_height * 1px + 2px * pad;
    padding: 10px;
    padding-left: 100px;
    Text {
        text: root.text_content;
    }
    
}